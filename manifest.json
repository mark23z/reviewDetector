{
    "manifest_version": 3,
    "name": "Review Detector",
    "version": "1.0.0",
    "action": {
        "default_popup": "file.html",
        "default_title": "Review Detector"
    },
    "description": "Check Amazon reviews for authenticity.",
    "icons": {
        "16": "icons/bild16.png",
        "32": "icons/bild32.png",
        "48": "icons/bild48.png",
        "128": "icons/bild128.png"
       
    },

    "background": {
        "service_worker": "background.js"
      
      },

      "permissions": [
        "contextMenus",
        "notifications",
        "tabs",
        "activeTab",
        "background",
        "storage"
      ]

    }
